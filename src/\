#include "fdf.h"

/*
**	Get the width of the file for the grid
*/

int		get_width(char *file)
{
	int		fd;
	char	*line;
	int		i;
	char	*firstline;

	if ((fd = open(file, O_RDONLY)) < 0)
		return (ERR_OPEN); // Erreur d'ouverture du fichier
	i = 0;
	while (get_next_line(fd, &line) > 0)
	{
		if (i == 0)
			firstline = line;
		i++;
		//ft_strdel(&line);
	}
	ft_strdel(&line);
	i = ft_count_words(firstline, ' ');
	//ft_strdel(&firstline);
	close(fd);
	return(i);
}
